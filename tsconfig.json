{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist", // Esto asegura que todo se compile en /dist
    "declarationDir": "./dist", // Archivos de definición también en /dist
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src"], // Incluye todos los archivos de /src
  "exclude": ["node_modules", "dist"]
}
